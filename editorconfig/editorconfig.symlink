# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# all files
[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = tab
insert_final_newline = true
max_line_length = 120
trim_trailing_whitespace = true

[*.{xml,py,java,go,sh}]
indent_style = tab
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4
